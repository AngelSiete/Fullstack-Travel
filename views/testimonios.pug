extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        if(testimonios)
            blockquote.text-center Nuestros clientes opinan:
            .row.testimoniales
                each testimonio in testimonios
                    .col-md-6.col-lg-4.mb-4 
                        .card 
                            .card-body 
                                blockquote.blockquote
                                p.mb-0 
                                    | #{testimonio.mensaje}
                                footer.blockquote-footer 
                                    | #{testimonio.nombre}
        .row 
            .col-md-12
                h2.d-block.w-100.text-center Agrega un testimonio
                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error.mensaje
            .row.justify-content-center.col 
                .col-md-8 
                    form(action="/testimonios" method="POST")
                        .form-group 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Escriba su nombre", name="nombre",class="form-control", value= nombre)
                        .form-group 
                            label(for="correo") Correo Electr√≥nico 
                            input#correo(type="text", placeholder="Escriba su correo", name="correo",class="form-control", value= correo)
                        .form-group 
                            label(for="mensaje") Mensaje 
                            textarea#mensaje(type="text", placeholder="Escriba su mensaje", name="mensaje",class="form-control", rows=3)= mensaje
                        input.btn.btn-success.btn-block(type="submit")